<?xml version="1.0" encoding="utf-8"?>

<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://www.nlog-project.org/schemas/NLog.xsd NLog.xsd">

  <targets>
    <target
      xsi:type="File"
      name="file"
      fileName="${environment:variable=ProgramData}/EmailIpAddressChange/${processname}.log"
      archiveFileName="${environment:variable=ProgramData}/EmailIpAddressChange/${processname}.{###}.log"
      archiveEvery="Day"
      archiveNumbering="Sequence"
      maxArchiveFiles="100"
      layout="${level:uppercase=true:padding=-5} ${longdate} ${threadid:padding=3:padCharacter=0} ${logger} - ${message}${onexception:${newline}${exception:format=ToString}}"
      />
    
    <target
      xsi:type="Mail"
      name="mail"
      subject="Network status update"
      from="EmailIpAddressChange"
      to="someone@example.com"
      smtpServer="aspmx.l.google.com"
      />
  </targets>

  <rules>
    <logger name="*" minlevel="Debug" writeTo="file" />
<!--    <logger name="*" minlevel="Info" writeTo="mail" />-->
  </rules>
</nlog>